<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/anton"
        android:text="Spain"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageButton
        android:id="@+id/botaoEditar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="500dp"
        android:layout_marginLeft="500dp"
        android:background="@drawable/ic_baseline_edit_24"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/botaoExcluir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/botaoEditar"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_toStartOf="@+id/botaoEditar"
        android:layout_toLeftOf="@+id/botaoEditar"
        android:background="@drawable/ic_baseline_delete_24"
        app:layout_constraintStart_toEndOf="@+id/botaoEditar"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>